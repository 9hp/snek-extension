{
	"manifest_version": 2,

	"name": "Sneknet",
	"description": "Group up together and conquer the circles!",
	"version": "0.4.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "icon.png"
	},
	"background": {
		"scripts": ["event.js"],
		"persistent": true
	},

	"content_scripts": [
		{
			"all_frames": true,
			"matches": ["https://*.reddit.com/*"],
			"css": ["content.css"]
		}
	 ],

	"permissions": [
		"https://*.reddit.com/",
		"storage"
	]
}
