{
	"manifest_version": 2,

	"name": "circle",
	"description": "Circle extension",
	"version": "0.1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.reddit.com/r/CircleofTrust"],
			"js": ["content/index.js"],
			"run_at": "document_end"
		}
	],

	"permissions": [
		"https://*.reddit.com/",
		"storage"
	]
}
